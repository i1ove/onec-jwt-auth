		ОшибкиПриложения.ОшибкаДанных("Нет пользователя ИБ с таким ИД", "Users.LinkUsers.NO_USER");
	КонецЕсли;
	
	Порты.Пользователи.ЗаписатьУИДПользователяИБ(ПользовательИД, УИДПользователяИБ);
	
	Возврат Истина;
	
КонецФункции